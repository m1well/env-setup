### cli aliases base ###
# export the user's home like
# 'export USER_HOME="/Users/<your-user-home>"; '

alias ..,,="cd .. && ls -al"
alias ,,="ls -al"
alias ..="cd .."
alias ....="cd .. && cd .."
alias ......="cd .. && cd .. && cd .."
alias ........="cd .. && cd .. && cd .. && cd .."
alias cc="clear"

# generate a uuid (uuidgen has to be installed)
alias uuid="uuidgen | tr '[:upper:]' '[:lower:]'"

# grep given string recursively (add search-string and path)
alias greprec="grep -in --directories=recurse"

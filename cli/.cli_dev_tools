### cli dev tools ###

# docker
alias doccomd="docker-compose down"
alias doccomu="docker-compose up"
alias doccomud="docker-compose up -d"
alias doci="docker images -a"
alias docirm="docker image rm"
alias docps="docker ps -a"

# git
alias gitaa="git add ."
alias gitaacoa="git add . && git commit --amend"
alias gitbra="git rev-parse --abbrev-ref HEAD"
alias gitch="git checkout"
alias gitcoa="git commit --amend"
alias gitcoaner="git commit --amend --no-edit --reset-author"
alias gitchb="git checkout -b"
alias gitcom="git commit -m"
alias gitconf="git config --list"
alias gitfa="git fetch --all"
alias gitll="git log -2 --graph --pretty=format:'%C(132)%h - %C(251)%s %C(45)(%ad) %C(33)<%cn>%Creset' --date=local"
alias gitpod="git checkout develop && git pull origin develop --rebase"
alias gitpom="git checkout master && git pull origin master --rebase"
alias gitpsh="git_push"
alias gitrb="git rebase"
alias gitrba="git rebase --abort"
alias gitrbc="git rebase --continue"
alias gitst="git status"

# gradle
alias grac="gradle clean"
alias gracb="gradle clean build"
alias grawrapper="gradle wrapper --gradle-version "
alias grawc="./gradlew clean"
alias grawcb="./gradlew clean build"
alias grawcbd="./gradlew clean buildDocker"

# maven
alias mvnc="mvn clean"
alias mvncp="mvn clean package"
alias mvncpst="mvn clean package -DskipTests"
alias mvnci="mvn clean install"
alias mvncv="mvn clean verify"
alias mvnwc="./mvnw clean"
alias mvnwcp="./mvnw clean package"
alias mvnwcpst="./mvnw clean package -DskipTests"
alias mvnwci="./mvnw clean install"
alias mvnwcv="./mvnw clean verify"

# npm
alias npmi="npm install"
alias npmrm="rm -rf node_modules"
alias npms="npm start"
alias npmt="npm test"
alias npmgu="npm install -g npm" # npm global update
alias npmv="npm view ${1}" # overview of specific npm library

# typescript
alias tsgu="npm install -g typescript" # typescript global update

# java
alias jj="java -jar"

# cloud foundry
alias cft="cf target"
alias cfa="cf apps"
alias cfs="cf services"
alias cfr="cf routes"

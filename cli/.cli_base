### cli base ###
# export the user's home like
# 'export USER_HOME="/Users/<your-user-home>"; '

alias helloworld="echo \"Hello World!\""
alias home="cd ${USER_HOME}";
alias ..,,="cd .. && ls -alp"
alias ,,="ls -alp"
alias ,,,="ls -alprt"
alias .-="cd - >/dev/null"
alias ..="cd .."
alias ....="cd .. && cd .."
alias ......="cd .. && cd .. && cd .."
alias ........="cd .. && cd .. && cd .. && cd .."
alias cc="clear"
alias xx="exit"

alias octals='bash -c "printf \" -- %b\n\" \\\\1{3,7}{3,4,5,6}"'

alias chrome="open -a \"Google Chrome\" --new --args -incognito"

alias idea="/usr/local/bin/idea"

# grep given string recursively (add search-string and path)
alias greprec="grep -in --directories=recurse"

export TIMESTAMP=`date "+%Y-%m-%d %H:%M:%S"`


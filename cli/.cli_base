### cli base ###
# export the user's home like
# 'export USER_HOME="/Users/<your-user-home>"; '

alias helloworld="echo \"Hello World!\""
alias home="cd ${USER_HOME}";
alias ..,,="cd .. && ls -al"
alias ,,="ls -al"
alias .-="cd - >/dev/null"
alias ..="cd .."
alias ....="cd .. && cd .."
alias ......="cd .. && cd .. && cd .."
alias ........="cd .. && cd .. && cd .. && cd .."
alias cc="clear"
alias xx="exit"

alias chrome="open -a \"Google Chrome\""

# grep given string recursively (add search-string and path)
alias greprec="grep -in --directories=recurse"
